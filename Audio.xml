<?xml version="1.0" encoding="UTF-8"?>
<Audio version="1.0" timeUnit="ms" gain="-10dB" interactionArea="#touchArea">

	<var name="pitch" value="$ballX" mapin="0,600" mapout="20,2000"></var>

	<Chain>

		<OscillatorNode type="sawtooth">
			<frequency follow="relX" map="0,100,20,2000"></frequency>
		</OscillatorNode>

		<BiquadFilterNode type="lowpass" frequency="$pitch"></BiquadFilterNode>

		<GainNode gain="$pointerdown"></GainNode>

	</Chain>
</Audio>